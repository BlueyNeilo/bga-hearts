{
  "name": "bga-hearts",
  "version": "1.0.0",
  "description": "",
  "main": "heartsblueinyellow.js",
  "watch": {
    "build:ts": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    },
    "build:prettier": {
      "patterns": [
        "."
      ],
      "extensions": "js"
    },
    "scss": {
      "patterns": [
        "src"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "build:ts": "tsc",
    "build:prettier": "prettier --config .prettierrc 'heartsblueinyellow.js' --write",
    "build:scss": "sass --no-source-map src/heartsblueinyellow.scss heartsblueinyellow.css",
    "watch": "npm-watch build:ts & npm-watch build:prettier # & npm-watch build:scss",
    "build": "npm run build:ts && npm run build:prettier # && npm run build:scss",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "generate": "php generate_state_diagram.php > misc/state-machine.dot && dot -Tpng -o misc/state-machine.png misc/state-machine.dot",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.5.16",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  }
}
